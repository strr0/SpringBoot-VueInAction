<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.example.demo.entity.User">
        insert into user(username, password, enabled, locked)
        values(#{username}, #{password}, #{enabled}, #{locked})
    </insert>

    <select id="findUserByUsername" parameterType="string" resultType="com.example.demo.entity.User">
        select * from user
        where username = #{username}
    </select>

    <select id="findUserRoleByUid" parameterType="int" resultType="com.example.demo.entity.Role">
        select * from role, user_role
        where role.id = user_role.rid and user_role.uid = #{id}
    </select>
</mapper>